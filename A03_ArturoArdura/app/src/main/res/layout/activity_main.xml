<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Botones de touch"
        android:textAlignment="center"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btnOnClick"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="10dp"
        android:layout_weight="2"
        android:text="onClick"
        android:textSize="40sp" />

    <Button
        android:id="@+id/btnOnLongClick"
        style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="10dp"
        android:layout_weight="2"
        android:text="onLongClick"
        android:textSize="40sp" />

    <Button
        android:id="@+id/btnOnTouch"
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="10dp"
        android:layout_weight="2"
        android:text="onTouch"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/fieldDeTexto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_weight="0.1"
        android:inputType="text"
        android:text="Ingresa un texto"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/fieldDeTextoDos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_weight="0.1"
        android:inputType="text"
        android:text="Ingresa otro texto"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/txtDetalle"
        android:layout_weight="0.3"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20sp"
        android:text="Detalles"
        />

</LinearLayout>